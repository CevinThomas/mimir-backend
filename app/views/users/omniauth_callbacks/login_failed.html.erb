    body {
      font-family: Arial, sans-serif;
      text-align: center;
      margin-top: 100px;
    }
    .error-message {
      color: #f44336;
      font-size: 24px;
      margin-bottom: 20px;
    }
    .instruction {
      font-size: 18px;
      margin-bottom: 30px;
    }
  </style>
</head>
